# Arcane Development Environment Configuration
# Copy this file to .env and customize the values for your development setup
# WARNING: These are development-only values, never use in production!

# Application Settings
GIN_MODE=debug
ENVIRONMENT=development
PORT=3552

# User/Group IDs for file permissions
PUID=1000
PGID=1000

# General Settings
UI_CONFIGURATION_DISABLED=true

# Security Settings
# Generate secure values for production: openssl rand -base64 32
ENCRYPTION_KEY=dev-encryption-key-replace-in-production-must-be-32-chars
JWT_SECRET=dev-jwt-secret-replace-in-production-must-be-long-enough

# Database Configuration
DATABASE_URL=file:data/arcane.db?_pragma=journal_mode(WAL)&_pragma=busy_timeout(2500)&_txlock=immediate

# Agent Configuration (for development agent service)
AGENT_MODE=false
AGENT_BOOTSTRAP_TOKEN=development-bootstrap-token
