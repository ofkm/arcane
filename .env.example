# Server Configuration
APP_URL="http://localhost:8080"
PORT=8080
ENVIRONMENT=production
DATABASE_URL=sqlite://data/arcane.db

# Encryption key for sensitive data (must be exactly 32 characters)
# Generate a secure key for production: openssl rand -base64 32 | head -c 32
ENCRYPTION_KEY=xxx

# JWT Secret (generate a secure one in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

OIDC_ENABLED=true
OIDC_CLIENT_ID=""
OIDC_CLIENT_SECRET=""
OIDC_REDIRECT_URI="http://localhost:8080/auth/oidc/callback"
OIDC_AUTHORIZATION_ENDPOINT="https://id.ofkm.us/authorize"
OIDC_TOKEN_ENDPOINT="https://id.ofkm.us/api/oidc/token"
OIDC_USERINFO_ENDPOINT="https://id.ofkm.us/api/oidc/userinfo"
OIDC_SCOPES="openid email profile" # Space separated list of scopes