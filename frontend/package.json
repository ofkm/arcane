{
	"name": "arcane",
	"private": true,
	"version": "0.15.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev --port 3000",
		"build": "vite build",
		"build:all": "./build.sh",
		"start:backend": "cd ../backend && go run ./cmd/main.go",
		"start:unified": "npm run build && npm run start:backend",
		"preview": "vite preview --port 3000",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"format": "prettier --write ./src",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint ./src",
		"lint:fix": "eslint ./src --fix",
		"test:init": "APP_ENV=TEST npx tsx scripts/init-test-env.ts",
		"test:setup": "npx tsx scripts/setup-test-images.ts",
		"test:e2e": "APP_ENV=TEST npm run test:init && npm run test:setup && playwright test",
		"test:e2e:ui": "playwright test --ui"
	},
	"dependencies": {
		"@codemirror/lang-yaml": "^6.1.2",
		"@codemirror/legacy-modes": "^6.5.1",
		"@sveltejs/adapter-static": "^3.0.8",
		"@tanstack/table-core": "^8.21.3",
		"@uiw/codemirror-theme-github": "^4.23.14",
		"axios": "^1.10.0",
		"codemirror": "^6.0.2",
		"date-fns": "^4.1.0",
		"js-yaml": "^4.1.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.13",
		"svelte-codemirror-editor": "^1.4.1"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.0",
		"@eslint/js": "^9.29.0",
		"@lucide/svelte": "^0.525.0",
		"@playwright/test": "^1.52.0",
		"@sveltejs/kit": "^2.22.2",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"@tailwindcss/vite": "^4.1.10",
		"@types/d3-scale": "^4.0.9",
		"@types/d3-shape": "^3.1.7",
		"@types/dockerode": "^3.3.42",
		"@types/js-yaml": "^4.0.9",
		"bits-ui": "^2.8.10",
		"clsx": "^2.1.1",
		"eslint": "^9.28.0",
		"eslint-plugin-svelte": "^3.9.1",
		"formsnap": "^2.0.1",
		"globals": "^16.2.0",
		"isomorphic-dompurify": "^2.25.0",
		"layerchart": "^2.0.0-next.27",
		"mode-watcher": "^1.0.8",
		"paneforge": "^1.0.0-next.5",
		"runed": "^0.29.1",
		"svelte": "^5.34.7",
		"svelte-check": "^4.2.2",
		"svelte-sonner": "^1.0.5",
		"svelte-toolbelt": "^0.9.3",
		"sveltekit-superforms": "^2.27.0",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^1.0.0",
		"tailwindcss": "^4.1.11",
		"tsx": "^4.20.3",
		"tw-animate-css": "^1.3.4",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.34.1",
		"vite": "^6.3.5",
		"zod": "^3.25.67"
	}
}
