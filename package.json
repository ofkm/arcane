    "@swimlane/docker-reference": "^2.0.1",
    "@tanstack/table-core": "^8.21.3",
    "arctic": "^3.7.0",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "codemirror": "^6.0.2",
    "date-fns": "^4.1.0",
    "dockerode": "^4.0.7",
    "dockerode-compose": "^1.4.0",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.2",
    "js-yaml": "^4.1.0",
