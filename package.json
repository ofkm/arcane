{
	"name": "arcane",
	"private": true,
	"version": "0.12.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev --port 3000",
		"build": "vite build",
		"preview": "vite preview --port 3000",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"format": "prettier --write ./src",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint ./src",
		"lint:fix": "eslint ./src --fix",
		"test:init": "APP_ENV=TEST npx tsx scripts/init-test-env.ts",
		"test:setup": "npx tsx scripts/setup-test-images.ts",
		"test:e2e": "APP_ENV=TEST npm run test:init && npm run test:setup && playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:report": "playwright show-report"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@lucide/svelte": "^0.511.0",
		"@playwright/test": "^1.52.0",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.20.8",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/vite": "^4.1.7",
		"@types/bcryptjs": "^3.0.0",
		"@types/dockerode": "^3.3.38",
		"@types/dockerode-compose": "^1.4.1",
		"@types/js-yaml": "^4.0.9",
		"@types/proper-lockfile": "^4.1.4",
		"bits-ui": "^2.1.0",
		"clsx": "^2.1.1",
		"eslint": "^9.27.0",
		"eslint-plugin-svelte": "^3.8.1",
		"formsnap": "^2.0.1",
		"globals": "^16.2.0",
		"mode-watcher": "^1.0.7",
		"paneforge": "^1.0.0-next.5",
		"svelte": "5.33.3",
		"svelte-check": "^4.2.1",
		"svelte-sonner": "^1.0.3",
		"sveltekit-superforms": "^2.25.0",
		"tailwind-merge": "^3.3.0",
		"tailwind-variants": "^1.0.0",
		"tailwindcss": "^4.1.6",
		"tw-animate-css": "^1.3.0",
		"typescript": "^5.8.0",
		"typescript-eslint": "^8.32.1",
		"vite": "^6.3.5",
		"zod": "^3.25.30"
	},
	"dependencies": {
		"@codemirror/lang-yaml": "^6.1.2",
		"@codemirror/legacy-modes": "^6.5.1",
		"@swimlane/docker-reference": "^2.0.1",
		"@tanstack/table-core": "^8.21.3",
		"arctic": "^3.7.0",
		"axios": "^1.9.0",
		"bcryptjs": "^3.0.2",
		"codemirror": "^6.0.1",
		"dockerode": "^4.0.6",
		"dockerode-compose": "^1.4.0",
		"js-yaml": "^4.1.0",
		"nanoid": "^5.1.5",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.4.0",
		"proper-lockfile": "^4.1.2",
		"runed": "^0.28.0",
		"slugify": "^1.6.6",
		"svelte-codemirror-editor": "^1.4.1",
		"svelte-kit-cookie-session": "^4.1.1",
